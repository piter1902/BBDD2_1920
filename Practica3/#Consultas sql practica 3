#Consultas sql practica 3

SELECT table_name FROM user_tables@schema2bd2;

TABLE_NAME
--------------------------------------------------------------------------------
DIRECCION
CODPOSTAL
TITULAR
CODENTIDADES
CUENTA
CUENTAAHORRO
SUCURSAL
CUENTACORRIENTE
OPERACION
OPEFECTIVO
OPTRANSFERENCIA


select UCC.CONSTRAINT_NAME, UCC.COLUMN_NAME, UC.CONSTRAINT_TYPE, UC.SEARCH_CONDITION, UC2.TABLE_NAME as REFERENCES_TABLE
from USER_CONS_COLUMNS UCC@schema2bd2, USER_CONSTRAINTS UC@schema2bd2, USER_CONSTRAINTS UC2@schema2bd2
where UCC.CONSTRAINT_NAME = UC.CONSTRAINT_NAME
and UC.R_CONSTRAINT_NAME = UC2.CONSTRAINT_NAME(+)
and UCC.TABLE_NAME = 'CODENTIDADES'
order by UCC.CONSTRAINT_NAME


select * from direccion@schema2bd2;


desc direccion@schema2bd2
desc CODPOSTAL@schema2bd2
desc TITULAR@schema2bd2
desc CODENTIDADES@schema2bd2
desc CUENTA@schema2bd2
desc CUENTAAHORRO@schema2bd2
desc SUCURSAL@schema2bd2
desc CUENTACORRIENTE@schema2bd2
desc OPERACION@schema2bd2
desc OPEFECTIVO@schema2bd2
desc OPTRANSFERENCIA@schema2bd2

select UV.VIEW_NAME, UV.TEXT, UTC.COMMENTS from 
USER_VIEWS@SCHEMA2BD2 UV, USER_TAB_COMMENTS@SCHEMA2BD2 UTC where UV.VIEW_NAME = UTC.TABLE_NAME(+);


select UCC.CONSTRAINT_NAME, UCC.COLUMN_NAME, UC.CONSTRAINT_TYPE, UC.SEARCH_CONDITION, UC2.TABLE_NAME as REFERENCES_TABLE
from USER_CONS_COLUMNS@SCHEMA2BD2 UCC, USER_CONSTRAINTS@SCHEMA2BD2 UC, USER_CONSTRAINTS@SCHEMA2BD2 UC2
where UCC.CONSTRAINT_NAME = UC.CONSTRAINT_NAME
and UC.R_CONSTRAINT_NAME = UC2.CONSTRAINT_NAME(+)
and UCC.TABLE_NAME = 'OPERACION'
order by UCC.CONSTRAINT_NAME;



